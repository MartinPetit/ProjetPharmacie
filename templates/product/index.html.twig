{% extends 'base.html.twig' %}

{% block title %}Nos Produits
{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="/css/product.css">
{% endblock %}

{% block body %}
    

    <div class=" mt-5">

    <div class="row">
        <div class="col-md-3 ">
                 {{form_start(form)}}
                 {{form_widget(form)}}
        </div>
        <div class="col-md-3 ">
                <button type="submit" class="btn btn-primary">
									Rechercher
								</button:type>
                                {{form_end(form)}}
        </div>
        <div class="col-md-5 pr-0">
            {% for category in categories %}
                <a id = "c1" href= "{{path('show_catego', {'id' : category.id })}}" class = "btn btn-secondary">{{category.name}}</a>
            {% endfor %}
        </div>

        


    </div>
    </div>

    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card bg-light text-dark mb-3" style="border : 2px solid black; border-radius: 30px">

                    <img src="{{ product.image }}" alt="Image du produit" style="height : 200px; width: 90%; display:block" class="ml-auto mr-auto mt-3">

                    <div class="card-body">
                        <h2 class="card-title" style="text-align : center">
                            {{ product.name }}
                        </h2>
                        <p class="card-text">
                            {{ product.description }}
                        </p>
                        

                        <div class="card-text  row align-items-center">

                            <div class=" col-6">

                                <h2>{{product.price}}&euro;</h2>
                            </div>


                            <div class=" col-6">
                                <a href=" {{ path ('show_products', {'slug' : product.slug }) }}" class="btn btn-secondary">
                                    Voir le produit
                                </a>

                            </div>

                        </div>
                    </div>


                </div>
            </div>

        {% endfor %}

        </div>

<div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item {% if page == 1 %} disabled {% endif %}">
      <a class="page-link" href="{{path('index_product', {'page': page - 1 })}}" tabindex="-1">Pr√©cedent</a>
    </li>

    {% for i in 1..pages %}
    <li class="page-item {% if page == i %}active{% endif %}"><a class="page-link" href="{{path('index_product', {'page': i })}}">{{i}}</a></li>
    {% endfor %}
    <li class="page-item {% if page == pages %} disabled {% endif %}">
      <a class="page-link" href="{{path('index_product', {'page': page + 1 })}}">Suivant</a>
    </li>
  </ul>
</nav>

</div>

        

  
    


{% endblock %}

