{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}


{% block body %}

	<div class="container mt-5 mb-5">

		<div style="height: 80vh;border: 2px solid black;border-radius : 30px ;background-color:white;" class="row align-items-center">
			<div class="col nopadding">
				<img src=" {{ product.image }} " alt="image du produit" width="465" height="500">
			</div>

			<div class="col vertical">

				<div class="row align-items-center">

					<div class="col te" style="text-align:center">

						<h1>
							{{ product.name }}
						</h1>

					</div>

					<div class="col rightA">

						<h1>
							{{ product.price }}&euro;</h1>

					</div>

					<div class="descr">
						{{ product.description }}
					</div>

					<br>
					<br>
					<br>
					<br>
					<br>

					<div class="row align-items-center">

						<h4>
							Description
						</h4>
						<br>

						{{ product.content | raw }}


					</div>
				</div>
			</div>

		</div>


	{% endblock %}
