{% extends 'base.html.twig' %}

{% block title %}Prise de rendez vous
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css"/>
	<link rel="stylesheet" href="/css/datetimePicker.css">
	<link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container mt-5" style="overflow:hidden;">

		{{form_start(form)}}

		<div class="alert alert-light" style="text-align:center; border:2px solid black; border-radius : 30px">
			<h2>
				Choisissez la date et l'heure du rendez vous</br></br>
			</h2>
				{{form_widget(form)}}
		</div>

		<div style="text-align:center " class="mb-5">

			<button id="c2" type="submit" class="btn btn-default">
				Confirmer
			</button>

		</div>

			{{form_end(form)}}

			{{ form_rest(form) }}


		<div class="bg-light py-3 px-3 mb-5" style=" border: 2px solid black; border-radius : 30px">
			<h1 style="text-align:center">
				Les prochains rendez vous
			</h1>


			{% for rdv in events %}

				<dl class="row" style="text-align:center">
					<dt class="col-md-4">date et heure du rendez vous
					</dt>
					<dd class="col-md-8">{{rdv.Date | date('d/m/Y à  H:i:s')}}</dd>
					<dt class="col-md-4">Date de fin
					</dt>
					<dd class="col-md-8">{{rdv.endDate | date('d/m/Y à  H:i:s')}}</dd>
				</dl>

				<hr>

			{% endfor %}

		</div>
</div>


{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script><script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>

<script type="text/javascript">
$(function () { $('#rendezvous_Date').datetimepicker({
	inline: true,
	sideBySide: true,
	format: 'DD/MM/YYYY HH:mm',
	defaultDate: null,
	daysOfWeekDisabled: [0],
	disabledHours: [0,1,2,3,4,5,6,7,8,13,14,20,21,22,23,24],
	enabledHours: [9,10,11,12,15,16,17,18,19],
	icons: {
		time: 'far fa-clock',
		date: 'far fa-calendar-alt',
		up: 'fas fa-arrow-up',
		down: 'fas fa-arrow-down',
		previous: 'fas fa-chevron-left',
		next: 'fas fa-chevron-right',
		today: 'far fa-calendar-check',
		clear: 'far fa-trash-alt',
		close: 'fas fa-times'
		}
	});
});
</script>

{% endblock %}

