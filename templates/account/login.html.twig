{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">

            <div class="bg-light py-3 px-3" style = " border: 1px solid black">
                <h1 style = "text-align:center">
                    Connexion
                </h1>

                {% if hasError %}
                    <div class="alert alert-danger"> Le nom d'utilisateur ou le mot de passe n'est pas correct </div>
                {% endif %}


                <form method="post" action=" {{ path('account_login') }} " accept-charset="UTF-8">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="adresse email" required value = "{{username}}">
                    </div>
                    <div class="form-group">
                        <label for="password">
                            Mot de passe
                        </label>
                        <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required>
                    </div>
                    <div class="form-group" style = "text-align:center">
                        <button type="submit" class="btn btn-success">
                           Connexion
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>





{% endblock %}
